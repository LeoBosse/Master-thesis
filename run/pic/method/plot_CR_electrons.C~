	CB->SetLeftMargin(lm+0.02);
	CB->SetRightMargin(lm-0.02);
	CB->SetFillStyle(1001);
	CB->SetFillColor(10);
	CB->SetLogx();
	CB->SetLogy();
	CB->cd();
	
	
	
	double data_X[74] = {0.1,0.5687853044039375,
